<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:scaleType="fitXY"
        android:src="@mipmap/ic_launcher"
        android:adjustViewBounds="true"
        android:id="@+id/imageviewFood"
        android:layout_width="120dp"
        android:layout_height="100dp"/>
    <TextView
        android:id="@+id/textviewNameFood"
        android:layout_marginLeft="10dp"
        android:textStyle="bold"
        android:textColor="#00897B"
        android:textSize="20sp"
        android:layout_toRightOf="@id/imageviewFood"
        android:text="Tên món ăn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_below="@id/textviewNameFood"
        android:id="@+id/textviewDescribeFood"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:textSize="10sp"
        android:maxLines="3"
        android:ellipsize="end"
        android:layout_toLeftOf="@id/textviewPriceFood"
        android:layout_toRightOf="@id/imageviewFood"
        android:text="Slow Food là tổ chức quảng bá và khuyến khích thực phẩm địa phương và cách thức nấu ăn truyền thống. Tổ chức được thành lập bởi Carlo Petrini ở Italy năm 1986 và mở rộng trên toàn thế giới. Thức ăn chậm là quan điểm đi ngược lại với thức ăn nhanh (fast food), trào lưu này đang cố gắng để bảo tồn ẩm thực truyền thống, từ đó khuyến khích trồng trọt và nuôi trồng các loại hoa màu, hạt, gia cầm có nguồn gốc địa phương. Tổ chức được thành lập đầu tiên là một bộ phận của phong trào sống chậm. Mục tiêu thực phẩm bền vững và quảng bá các hộ kinh doanh địa phương được tiến hành song song bằng một lộ trình hợp lý, nhằm chống lại xu hướng nông nghiệp toàn cầu hóa. "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:layout_below="@id/textviewNameFood"
        android:id="@+id/textviewPriceFood"
        android:layout_centerVertical="true"
        android:textStyle="bold"
        android:textColor="#D10101"
        android:textSize="15sp"
        android:maxLines="3"
        android:layout_alignParentRight="true"
        android:text="$200.000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</RelativeLayout>